@model CNWeb.Models.SanPham

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Thêm mới sản phẩm</h2>
<br /><br />
@using (Html.BeginForm("Create","QuanLiSanPham",FormMethod.Post,new { @enctype = "multipart/form-data"}))
{
    @Html.AntiForgeryToken()
    
