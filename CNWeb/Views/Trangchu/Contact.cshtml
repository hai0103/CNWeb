                    <textarea placeholder="Nội dung" name="noidungLH" required></textarea>
                    <div class="submit-btn">
                        <input type="submit" value="Gửi">
                    </div>
                </form>
            </div>
            <div class="clearfix"></div>
        </div>
    </div>
</div>
<!--contact-end-->
