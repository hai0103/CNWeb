
@{
    ViewBag.Title = "listProductSearch";
    Layout = "~/Views/Shared/_ShopLayout.cshtml";
}



@using CNWeb.Models
@model List<SanPham>


<div class="product-one">
    @{

        foreach (var item in Model)
        {
            if (item.DaXoa == true)
            {
                <div class="col-md-4 product-left p-left">
                    <div class="product-main simpleCart_shelfItem">
                        <a href="@Url.Action("ProductDetail","Trangchu",new { @IdPro = item.IDSanPham})" class="mask"><img class="img-responsive zoom-img" src="@Url.Content(item.HinhAnh)" alt="" /></a>
                        <div class="product-bottom">
                            <h3> <a href="@Url.Action("ProductDetail", "Trangchu", new { @IdPro = item.IDSanPham })" class="mask">@item.TenSanPham</a></h3>
                            <p>Khám phá ngay</p>
                            <h4><a class="item_add" href="#"><i></i></a> <span class=" item_price">@item.DonGia VNĐ</span></h4>
                        </div>
                        <div class="srch srch1">
                            <span>-50%</span>
                        </div>
                    </div>
                </div>

            }
        }
    }




    <div class="clearfix"></div>
</div>

<script>
    $(function () {
        $('.pageindex').click(function () {
            var trang = $(this).data('id');
            var maloai = $('maloai').data('id');
            loadData(maloai, trang)
        });
    })
</script>

<style>
    .pageindexs {
        padding: 306px 0px 153px 340px;
    }

        .pageindexs span {
            margin-left: 10px;
            border: solid 1px;
            padding: 10px;
            cursor: pointer;
        }
</style>