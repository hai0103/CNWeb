@using CNWeb.Models;
@model List<SanPham>

@{
    ViewBag.Title = "LuLu Shop";
    Layout = "~/Views/Shared/_ShopLayout.cshtml";
}

<!--banner-starts-->
<div class="bnr" id="home">
    <div id="top" class="callbacks_container">
        <ul class="rslides" id="slider4">
            <li>
                <img src="~/Content/images/banner1.jpg" alt="" />
            </li>
            <li>
                <img src="~/Content/images/banner2.jpg" alt="" />
            </li>
            <li>
                <img src="~/Content/images/banner3.jpg" alt="" />
            </li>
        </ul>
    </div>
    <div class="clearfix"> </div>
</div>
<!--banner-ends-->
<!--about-starts-->
<div class="about">
    <div class="container">
        <div class="about-top grid-1">
            <div class="col-md-4 about-left">
                <figure class="effect-bubba">
                    <img class="img-responsive" src="~/Content/images/cho1.jpg" alt="" />
                    <figcaption>
                        <h2>Chó</h2>
                    </figcaption>
                </figure>
            </div>
            <div class="col-md-4 about-left">
                <figure class="effect-bubba">
                    <img class="img-responsive" src="~/Content/images/topProd1.jpg" alt="" />
                    <figcaption>
                        <h4>Mèo</h4>
                    </figcaption>
                </figure>
            </div>
            <div class="col-md-4 about-left">
                <figure class="effect-bubba">
                    <img class="img-responsive" src="~/Content/images/tho.jpg" alt="" />
                    <figcaption>
                        <h4>Thỏ</h4>

                    </figcaption>
                </figure>
            </div>
            <div class="clearfix"></div>
        </div>
    </div>
</div>
<!--about-end-->
<!--product-starts-->
<div class="product">
    <div class="container">
        <div class="product-top">
            <div class="product-one">
                @{
                    foreach (var item in Model)
                    {
                       
                        <div class="col-md-3 product-left">
                            <div class="product-main simpleCart_shelfItem">
                                <a href="@Url.Action("ProductDetail","Trangchu",new { @IdPro = item.IDSanPham})" class="mask"><img class="img-responsive zoom-img" src="@Url.Content(item.HinhAnh)" alt="" /></a>
                                <div class="product-bottom">
                                    <h3> <a href="@Url.Action("ProductDetail", "Trangchu", new { @IdPro = item.IDSanPham })" class="mask">@item.TenSanPham</a></h3>
                                    <h4><a class="item_add" href="#"><i></i></a> <span class=" item_price">@item.DonGia VNĐ</span></h4>
                                </div>
                                <div class="srch">
                                    <span>-50%</span>
                                </div>
                            </div>
                        </div>
                    }
                }
                <div class="clearfix"></div>

            </div>
        </div>
    </div>

</div>
<!--product-end-->