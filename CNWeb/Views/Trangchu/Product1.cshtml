@using CNWeb.Models
@model LoaiSanPham


@{
    ViewBag.Title = "Sản Phẩm";
    Layout = "~/Views/Shared/_ShopLayout.cshtml";
}


@Html.Partial("BreadcrumbsPartial", "Shared")

<!--prdt-starts-->
<div class="prdt">
    <div class="container">
        <div class="prdt-top">
            <div class="col-md-9 prdt-left">
                <div class="SPcontent">
                    @{
                        OnlineShop db = new OnlineShop();
                        List<SanPham> ListSP = db.SanPhams.Where(s => s.IDLoaiSanPham == Model.IDLoaiSanPham).ToList();
                        foreach (var item in ListSP)
                        {
                            if (item.DaXoa == true)
                            {
                                <div class="col-md-4 product-left p-left">
                                    <div class="product-main simpleCart_shelfItem">
                                        <a href="@Url.Action("ProductDetail","Trangchu",new { @IdPro = item.IDSanPham})" class="mask"><img class="img-responsive zoom-img" src="@Url.Content(item.HinhAnh)" alt="" /></a>
                                        <div class="product-bottom">
                                            <h3> <a href="@Url.Action("ProductDetail", "Trangchu", new { @IdPro = item.IDSanPham })" class="mask">@item.TenSanPham</a></h3>
                                            <p>Khám phá ngay</p>
                                            <h4><a class="icon_item_add" href="@Url.Action("ThemItemGioHang", "GioHang", new { @IDSanPham = item.IDSanPham, @SL = 1, @strUrl = "~/Trangchu/Products" })"><i></i></a> <span class=" item_price">@item.DonGia VNĐ</span></h4>
                                        </div>
                                        <div class="srch srch1">
                                            <span>-50%</span>
                                        </div>
                                    </div>
                                </div>

                            }
                        }
                    }
                </div>
            </div>
            <div class="col-md-3 prdt-right">
                <div class="w_sidebar">
                    <section class="header-right ">
                        <div class="search-bar">
                            <input class="txtS" type="text" value="Tìm kiếm" onfocus="this.value = '';" onblur="if (this.value == '') {this.value = 'Tìm kiếm';}">
                            <input class="smS" type="submit" value="">
                        </div>
                    </section>
                    <div class="clearfix"> </div>
                    <section class="sky-form">
                        <h4>Danh mục sản phẩm</h4>
                        <div class="row1 scroll-pane">
                            <div class="col col-4">
                                <label class="checkbox"><input type="checkbox" name="checkbox" checked=""><i></i>Tất cả</label>
                            </div>
                            <div class="col col-4">
                                <label class="checkbox"><input type="checkbox" name="checkbox"><i></i>Sản phẩm nổi bật</label>
                                <label class="checkbox"><input type="checkbox" name="checkbox"><i></i>Sản phẩm mới</label>
                                <label class="checkbox"><input type="checkbox" name="checkbox"><i></i>Sản phẩm khuyến mãi</label>
                            </div>
                        </div>
                    </section>
                    @*<section class="sky-form">
                        <h4>Loại thú cưng</h4>
                        <div class="row1 row2 scroll-pane">

                            <div class="col col-4">
                                <ul>
                                    <label data-id="null" class="checkbox listCate"><input type="radio" name="checkbox"><i></i>Tất cả</label>
                                    
                                        <label data-id="@Model.IDLoaiSanPham" class="checkbox listCate"><input type="radio" name="checkbox"><i></i>@Model.TenLoai</label>
                                    
                            </div>
                            </ul>

                        </div>
                    </section>*@
                </div>
            </div>
            <div class="clearfix"></div>
        </div>
    </div>
</div>
<!--product-end -->

