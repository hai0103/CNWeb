@using CNWeb.Models
@model List<TinTuc>


@{
    ViewBag.Title = "Tin tức";
    Layout = "~/Views/Shared/_ShopLayout.cshtml";
}

@Html.Partial("BreadcrumbsPartial", "Shared")

<!--news-starts-->
<div class="news">
    <div class="container">
        <div class="row">
            <div class="col-xs-12 col-sm-9 col-md-9 col-lg-9 news-left">

                @*@Html.Partial("listNew","Trangchu")*@
                @{
                    foreach (var item in Model)
                    {
                        <article class="news-one">
                            <div class="col-md-4 news-image">
                                <a href="@Url.Action("NewsDetail","Trangchu", new { @IdNew = item.IDTinTuc})"><img src="@Url.Content(item.HinhAnh)" class="img-responsive" alt=""></a>
                            </div>
                            <div class="col-md-8 news-content">
                                <header>
                                    <h1 class="title-news"><a href="@Url.Action("NewsDetail","Trangchu", new { @IdNew = item.IDTinTuc})">@item.TieuDe</a></h1>
                                    <span class="date-news">@item.NgayDang</span>
                                </header>
                                <main>
                                    <p>Việc nuôi một con thú nhỏ trong nhà sẽ giúp bạn giảm stress, cải thiện bệnh về huyết áp, ngăn ngừa dị ứng và tốt cho tim mạch. Hơn nữa, khi đi...</p>
                                </main>
                                <div class="news-share">
                                    <h3>Chia sẻ ngay</h3>
                                    <ul class="icon-share">
                                        <li><a href="#"><i class="fab fa-facebook-f"></i></a></li>
                                        <li><a href="#"><i class="fab fa-twitter"></i></a></li>
                                        <li><a href="#"><i class="fab fa-google-plus-g"></i></a></li>

                                    </ul>
                                </div>
                            </div>
                        </article>

                    }


                }
                <div class="pagenatin">
                    <div class="col-sm-4 col-xs-12 col-sm-offset-4">
                        <nav>
                            <ul class="pagination">
                                <li><a href="#" aria-label="Previous"><span aria-hidden="true">«</span></a></li>
                                <li><a href="#" id="page1">1</a></li>
                                <li><a href="#">2</a></li>
                                <li><a href="#">3</a></li>
                                <li><a href="#" aria-label="Next"><span aria-hidden="true">»</span></a></li>
                            </ul>
                        </nav>
                    </div>
                    <div class="clearfix"></div>
                </div>
            </div>

            <div class="col-xs-12 col-sm-3 col-md-3 col-lg-3 news-right">
                <div class="w_sidebar">
                    <section class="sky-form">
                        <h4>Phân loại tin tức</h4>
